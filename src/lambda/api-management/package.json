{
  "name": "api-management",
  "version": "1.0.0",
  "description": "API Management Service for CareerCanvas - Handles API registration, token management, and rate limiting",
  "author": "CareerCanvas Team",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "nest build",
    "postbuild": "cp package*.json dist/ && cd dist && npm install --production",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "deploy": "cd ../../.. && npm run deploy",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles --forceExit",
    "test:e2e:watch": "jest --config ./test/jest-e2e.json --watch"
  }
}
